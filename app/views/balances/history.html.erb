
<!-- PAGE HEADER END -->

<!-- PAGE CONTENTS -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Trade History</h4>
                        <p class="category">Here are trade result in the last 24hrs</p>
                    </div>
                    <div class="content table-responsive table-full-width">

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Trade Id</th>
            <th>Currency</th>
            <th>Amount Invested</th>
            <th>Entry Rate </th>
              <th>Rate</th>
                <th>Entry Time</th>
                  <th>Expiration</th>
                    <th>Status</th>
                      <th>Returns</th>



        </tr>
    </thead>
    <tbody>
            <% @balances.each do |b| %>
            <tr>
              <td>
                <%=b.tradeId %>
              </td>
              <td>
                <%= b.currency %>
              </td>
              <td>
                <%= b.deposit %>
              </td>
              <td>
                <%= b.entry%>
              </td>
              <td>
                <%=b.rate %>
              </td>
              <td>
                <%=b.created_at.strftime("%d-%b-%Y") %>
              </td>
              <td>
                <%= b.expiration %>
              </td>
              <td>
                <%= b.status %>
              </td>
              <td>
                <%= b.return%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
</div>
</div>
